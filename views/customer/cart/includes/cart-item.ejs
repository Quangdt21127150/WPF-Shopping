<article class="cart-item d-flex p-3 my-3 rounded-4">
  <article>
    <h6 class="m-0"><%= item.product.title %></h6>
    <p class="m-0">
      <span><%= item.totalPrice.toLocaleString('vi-VN') %> VND </span>
      <i> (Đơn giá: <%= item.product.price.toLocaleString('vi-VN') %> VND) </i>
    </p>
  </article>

  <form
    data-productid="<%= item.product.id %>"
    data-csrf="<%= locals.csrfToken %>"
  >
    <input
      type="number"
      min="0"
      value="<%= item.quantity %>"
      class="p-2 rounded-1 border-0"
      required
    />
  </form>
</article>
